<article class="post catalogPost{{counter}}">
    <div class="col rank">
        <span>{{counter}}</span>
    </div>
    <div class="col thumbnail">
        <a href="{{url}}/">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
                {{title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                submitted {{submittedTime}} ago by {{author}}
            </div>
            <div class="controls">
                <ul>
                    <li class="action"><a class="commentsLink" href="#">comments</a></li>
                    {{#if isOwner}}
                        <li class="action"><a class="editLink" href="#">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#">delete</a></li>
                    {{/if}}
                </ul>
            </div>

        </div>
    </div>
</article>